{
  "module_id": "viam:failover",
  "visibility": "public",
  "url": "https://github.com/viam-modules/failover",
  "description": "This module includes failover models for sensor, power sensor, and movement sensor. Failover allows you to desginate a primary component and backups to calls in the case the primary fails.",

  "models": [
    {
      "api": "viam:component:sensor",
      "model": "viam:failover:sensor"
    },
    {
      "api": "viam:component:power_sensor",
      "model": "viam:failover:power_sensor"
    },
    {
      "api": "viam:component:movement_sensor",
      "model": "viam:failover:movement_sensor"
    }

  ],

  "build": {
    "build": "make module.tar.gz",
    "arch" : ["linux/amd64", "linux/arm64", "darwin/arm64"],
    "path" : "bin/module.tar.gz"
  },
  "entrypoint": "bin/failover"
}
